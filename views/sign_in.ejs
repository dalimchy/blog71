<%- include('partials/head')%>
    <div class="card" style="width: 35%;margin:10% auto;">
        <div class="card-header bg-green bg-inverse" style="margin: 0px auto; text-align: center;">
            <div class="logoBlog71"></div>
            <h4 style="width: 100%; float: left;">Sign In</h4>
            <h6 style="width: 100%;float: left;">with you Blog71 Account</h6>
            <ul class="card-actions">
                <li>
                    
                </li>
            </ul>
        </div>
        <div class="card-block">
            <% if(errors != false){ %>
                <% if(errors.email != undefined){ %>
                    <div class="alert alert-danger">
                        <p><strong>Warning! </strong><%= errors.email %></p>
                    </div>
                <% } %>
                <% if(errors.password != undefined){ %>
                    <div class="alert alert-warning">
                        <p><strong>Warning! </strong><%= errors.password %></p>
                    </div>
                <% } %>
            <% } %>
            <form class="form-horizontal" action="/users/login" method="post">
                <div class="form-group">
                    <label class="col-xs-12" for="register1-email">Email</label>
                    <div class="col-xs-12">
                        <div class="input-group">
                            <input class="form-control" type="email" name="email" placeholder="Enter email...">
                            <span class="input-group-addon"><i class="ion-ios-email"></i></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12" for="register1-password">Password</label>
                    <div class="col-xs-12">
                        <div class="input-group">
                            <input class="form-control" type="password" name="password" placeholder="Enter password...">
                            <span class="input-group-addon"><i class="ion-asterisk"></i></span>
                        </div>
                    </div>
                    <div class="col-xs-12">
                        <a style="color:gray; cursor:pointer;width: 100%; font-size: 12px; font-weight: bold;">Forgot Password ?</a>
                    </div>
                </div>
                <div class="form-group m-b-0">
                    <div class="col-xs-12">
                        <button class="btn btn-app" type="submit" data-toggle="card-action" data-action="refresh_toggle" data-action-mode="demo" style="width: 100%">Sign In</button>
                    </div>
                </div>
                <div class="form-group m-b-0">
                    <div class="col-xs-12" style="text-align: center; margin-top: 16px">
                        <span style="color:gray; width: 100%; font-size: 12px; font-weight: bold;">Don't have an account ?</span>
                    </div>
                    <div class="col-xs-12">
                        <a href="/register" class="btn btn-app-purple" data-toggle="card-action" data-action="refresh_toggle" data-action-mode="demo" style="width: 100%">Register</a>
                    </div>
                </div>
            </form>
        </div>
        <!-- .card-block -->
    </div>
<%- include('partials/foot')%>